<!DOCTYPE html>
<html>
<head>
    <title>Interactive Variant Browser</title>
    <script src="https://cdn.jsdelivr.net/npm/igv@3.7.3/dist/igv.min.js"></script>
    <link rel="stylesheet" href="static/css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</head>
<body>
    <h1>Interactive Variant Browser</h1>
    
    <div class="container">
        <!-- Left Pane: Variant Table -->
        <div class="left-pane">
            <div class="table-container">
                <table id="variant-table">
                    <thead>
                        <tr>
                            <th>Position</th>
                            <th>Ref</th>
                            <th>Alt</th>
                            <th>Info</th>
                        </tr>
                    </thead>
                    <tbody id="variant-tbody"></tbody>
                </table>
            </div>
            
            <!-- Controls Container -->
            <div class="controls-container">
                <div class="controls">
                    <!-- Navigation Controls -->
                    <div>
                        <label for="flank-size">Flank Size (bp):</label>
                        <input type="number" id="flank-size" value="100" min="10" max="1000" step="10">
                        <label>
                            <input type="checkbox" id="show-spanning" checked>
                            Show Spanning Reads Track
                        </label>
                        <label>
                            <input type="checkbox" id="view-as-pairs">
                            View as Pairs
                        </label>
                    </div>
                    <!-- MAPQ -->
                    <label class="form-label">MAPQ â‰¥</label>
                    <input type="number" id="min-mapq"
                        class="filter-input form-control form-control-sm"
                        value="0" min="0" max="60">


                    <!-- Read Filters -->
                    <div class="accordion" id="readFilterAccordion">
                    <!-- ================= By value ================= -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseValue">
                             Filter value (exclude reads with these properties) (Forbid) 
                        </button>
                        </h2>

                        <div id="collapseValue"
                            class="accordion-collapse collapse"
                            data-bs-parent="#readFilterAccordion">

                            <div class="accordion-body">
                                <div class="form-check">
                                    <input type="number" id="filter-min-soft-clip"
                                        class="filter-input form-control form-control-sm"
                                        value="0" min="0" max="60">
                                    <label class="form-check-label">Min Soft Clip</label>
                                </div>

                                <div class="form-check">
                                    <input type="number" id="retain-min-soft-clip"
                                        class="filter-input form-control form-control-sm"
                                        value="0" min="0" max="60">
                                    <label class="form-check-label">Max Soft Clip</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ================= INCLUDE ================= -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseInclude">
                            Include (Require)
                        </button>
                        </h2>

                        <div id="collapseInclude"
                            class="accordion-collapse collapse"
                            data-bs-parent="#readFilterAccordion">

                            <div class="accordion-body">

                                <!-- ===== FLAGS ===== -->
                                <h6 class="text-success">Flags</h6>

                                <div class="form-check">
                                <input type="checkbox" id="filter-duplicates" class="filter-checkbox form-check-input" >
                                <label class="form-check-label">Duplicates</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-properpair" class="filter-checkbox form-check-input">
                                <label class="form-check-label">Proper Pairs</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-secondary" class="filter-checkbox form-check-input">
                                <label class="form-check-label">Secondary</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-supplementary" class="filter-checkbox form-check-input">
                                <label class="form-check-label">Supplementary</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-qcfail" class="filter-checkbox form-check-input">
                                <label class="form-check-label">QC Failed</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-paired" class="filter-checkbox form-check-input">
                                <label class="form-check-label">Paired</label>
                                </div>

                                <hr>

                                <!-- ===== TAGS ===== -->
                                <h6 class="text-success">XO Tag Bits</h6>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-overlap" class="filter-checkbox form-check-input">
                                <label class="form-check-label">overlap</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-nonspanningmate" class="filter-checkbox form-check-input">
                                <label class="form-check-label">mates</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-splitx" class="filter-checkbox form-check-input">
                                <label class="form-check-label">split mates</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-split" class="filter-checkbox form-check-input">
                                <label class="form-check-label">split reads</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-proper" class="filter-checkbox form-check-input">
                                <label class="form-check-label">proper</label>
                                </div>

                                <div class="form-check">
                                <input type="checkbox" id="filter-tag-improper" class="filter-checkbox form-check-input">
                                <label class="form-check-label">improper</label>
                                </div>

                            <hr>

                        </div>
                        </div>
                    </div>


                    <!-- ================= EXCLUDE ================= -->
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                        <button class="accordion-button collapsed"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#collapseExclude">
                            Exclude (Forbid)
                        </button>
                        </h2>

                        <div id="collapseExclude"
                            class="accordion-collapse collapse"
                            data-bs-parent="#readFilterAccordion">

                        <div class="accordion-body">

                            <!-- ===== FLAGS ===== -->
                            <h6 class="text-danger">Flags</h6>

                            <div class="form-check">
                            <input type="checkbox" id="retain-duplicates" class="filter-checkbox form-check-input">
                            <label class="form-check-label">Duplicates</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-properpair" class="filter-checkbox form-check-input">
                            <label class="form-check-label">Proper Pairs</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-secondary" class="filter-checkbox form-check-input">
                            <label class="form-check-label">Secondary</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-supplementary" class="filter-checkbox form-check-input">
                            <label class="form-check-label">Supplementary</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-qcfail" class="filter-checkbox form-check-input">
                            <label class="form-check-label">QC Failed</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-paired" class="filter-checkbox form-check-input">
                            <label class="form-check-label">Paired</label>
                            </div>

                            <hr>

                            <!-- ===== TAGS ===== -->
                            <h6 class="text-danger">XO Tag Bits</h6>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-overlap" class="filter-checkbox form-check-input">
                            <label class="form-check-label">overlap</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-nonspanningmate" class="filter-checkbox form-check-input">
                            <label class="form-check-label">mates</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-splitx" class="filter-checkbox form-check-input">
                            <label class="form-check-label">split mates</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-split" class="filter-checkbox form-check-input">
                            <label class="form-check-label">split reads</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-proper" class="filter-checkbox form-check-input">
                            <label class="form-check-label">proper</label>
                            </div>

                            <div class="form-check">
                            <input type="checkbox" id="retain-tag-improper" class="filter-checkbox form-check-input">
                            <label class="form-check-label">improper</label>
                            </div>

                            <h6 class="text-danger">Filter by value</h6>
                        </div>
                        </div>
                    </div>

                    </div>

                    <!-- Read Selection -->
                    <div class="filter-section">
                        <h4>Read Selection & Highlighting:</h4>
                        <p style="font-size: 11px; color: #666; margin: 5px 0;">
                            Click on read names to search 
                        </p>
                        <div>
                            <input type="text" id="highlight-read-name" placeholder="Enter read name" style="width: 200px;">
                            <button class="btn" onclick="addReadToList()">Add to List</button>
                            <button class="btn btn-secondary" onclick="clearReadList()">Clear All</button>
                            <button class="btn btn-secondary" onclick="clearHighlightedReads()">Clear Highlights</button>
                        </div>
                        <div id="highlighted-reads-list"></div>
                    </div>

                </div>
            </div>
        </div>
        
        <!-- Right Pane: IGV Browser -->
        <div class="right-pane">
            <div id="igv-div"></div>
            <div class="toast-container position-fixed bottom-0 end-0 p-3">

        <div id="filterToast"
            class="toast align-items-center text-bg-dark border-0"
            role="alert"
            aria-live="assertive"
            aria-atomic="true">

            <div class="d-flex">
            <div class="toast-body">
                Filter updated
            </div>
            <button type="button"
                    class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast">
            </button>
            </div>

        </div>
</div>

        </div>
    </div>

    <!-- Embed data as JavaScript -->
    <script>
        // Data from Python
        const VARIANTS_DATA = {{ variants_json | safe }};
        const READ_GROUPS_DATA = {{ read_groups_json | safe }};
        const INITIAL_LOCUS = "{{ first_locus }}";
    </script>
    
    <!-- Main application script -->
    <script src="static/js/config.js"></script>
    <script src="static/js/viewer.js"></script>
</body>
</html>
